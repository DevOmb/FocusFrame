<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/placeholder"
        />

    <com.devomb.focusframe.FocusFrame
        android:id="@+id/focusFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:focusBox_height="150dp"
        app:focusBox_width="150dp"
        app:focusBox_shape="circle"
        app:focusBox_borderWidth="3dp"
        app:focusBox_borderColor="#99f26e"
        app:focusBox_movingBorderColor="#5245c1"
        app:movable="true"/>

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        android:textSize="18sp" />

</FrameLayout>
